<html>

<head>
	<%- @getBlock("meta").toHTML() %>
	<%- @getBlock("styles").add(["/styles/commun.css"]).toHTML() %>
</head>

<body>
	
	<header>
		<p id="langue"><a href="">FR</a> | <a href="">EN</a></p>
		<h1> <a href="/index.html"> Project-Gatherer </h1>
		
	</header>
	
	<div id="page">
	
		<nav>
			<div class="bloc_nav">
				<h3> Project-Gatherer </h3>
				<ul>
					<li class="liste"> <a href="/index.html"> Accueil </a> </li>
					<li class="liste" id="clickme" style="cursor:pointer"> Se connecter  </li>
					<form id="connexion">
					<li><input type="text" value="mot de passe" name="mdp" onblur="if (this.value=='') this.value = 'mot de passe'" 
    onfocus="if (this.value=='mot de passe') this.value = ''"></li>
    
					<li><input type="text" value="identifiant" name="id" onblur="if (this.value=='') this.value = 'identifiant'" 
    onfocus="if (this.value=='identifiant') this.value = ''"></li>
					<li><input type="submit" value="se connecter"></li>
					</form>
					<li class="liste"> <a href=""> Options </a> </li>			
				</ul>
				<form name="input" action="/recherche.html" method="get">	
							<input type="search" name="recherche" id="recherche">
							<input type="submit" value="Rechercher">
						</form> 
			</div>
		</nav>
		<section>
		<%- @content %>
		</section>
		<div class="clear"></div>
		</div>
		<footer>
			&nbsp;
		</footer>

<%- @getBlock("scripts").add(["/vendor/jquery.js","/scripts/commun.js"]).toHTML() %>
</body>		
</html>
